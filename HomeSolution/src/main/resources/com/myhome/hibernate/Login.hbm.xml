<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
		<class name="com.myhome.model.Login" 
			table="login" catalog="homemgmt">
	        <id name="loginID" type="java.lang.Long">
	            <column name="login_id" />
	        </id>
	        
	    <property name="username" type="string">
            <column name="user_name" length="25"  not-null="true" />
        </property> 
                       
        <property name="logindatetime" type="date">
            <column name="logindatetime" not-null="true" />
        </property> 
                                                     
        <property name="logoutdatetime" type="date">
            <column name="logoutdatetime" not-null="true" />
        </property>  
        
        </class>
</hibernate-mapping>
        
                
        